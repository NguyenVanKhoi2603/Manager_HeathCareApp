<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageActivity">
    <include android:id="@+id/include_toolbar_message" layout="@layout/toolbar_message"></include>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_chatList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_toolbar_message"
        android:layout_marginBottom="70dp">

    </androidx.recyclerview.widget.RecyclerView>

    <include android:id="@+id/include_bottom_navigation" layout="@layout/navigation_bottom_bar"></include>
</RelativeLayout>