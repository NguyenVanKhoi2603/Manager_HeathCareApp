<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/img_item_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/imgRows_item_chat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_image"></ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/lnl_item_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/img_item_chat"
            android:layout_toRightOf="@id/img_item_chat"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_username_item_chat"
                android:textSize="19dp"
                android:textColor="@color/black"
                android:fontFamily="@font/adihaus_din_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khoi Nguyen"></TextView>

            <TextView
                android:id="@+id/tv_description_item_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You: Thanks you so must!"></TextView>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>