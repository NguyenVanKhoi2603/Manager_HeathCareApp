<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_border_toolbar">

    <RelativeLayout
        style="@style/rl_toolbar_basic">

        <ImageButton
            android:id="@+id/icon_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/ic_space_bar"></ImageButton>

        <TextView
            android:id="@+id/title_toolbar_settings"
            style="@style/title_toolbar"
            android:layout_toStartOf="@id/icon_exit_app_settings"
            android:layout_toLeftOf="@id/icon_exit_app_settings"
            android:layout_toEndOf="@id/icon_empty"
            android:layout_toRightOf="@id/icon_empty"
            android:text="@string/title_toolbar_settings">

        </TextView>



        <ImageButton
            android:id="@+id/icon_exit_app_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:src="@drawable/ic_exit_to_app"></ImageButton>
    </RelativeLayout>

</RelativeLayout>